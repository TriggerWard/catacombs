{
  "name": "catacombs",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/contracts",
      "packages/ui",
      "packages/nillion",
      "packages/warden"
    ]
  },
  "scripts": {
    "account": "yarn workspace @catacombs/contracts account",
    "chain": "yarn workspace @catacombs/contracts chain",
    "fork": "yarn workspace @catacombs/contracts fork",
    "deploy": "yarn workspace @catacombs/contracts deploy",
    "verify": "yarn workspace @catacombs/contracts verify",
    "hardhat-verify": "yarn workspace @catacombs/contracts hardhat-verify",
    "compile": "yarn workspace @catacombs/contracts compile",
    "generate": "yarn workspace @catacombs/contracts generate",
    "hardhat:lint": "yarn workspace @catacombs/contracts lint",
    "hardhat:lint-staged": "yarn workspace @catacombs/contracts lint-staged",
    "hardhat:test": "yarn workspace @catacombs/contracts test",
    "test": "yarn hardhat:test",
    "start": "yarn workspace @catacombs/ui dev",
    "next:lint": "yarn workspace @catacombs/ui lint",
    "next:format": "yarn workspace @catacombs/ui format",
    "next:check-types": "yarn workspace @catacombs/ui check-types",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "yarn workspace @catacombs/ui vercel",
    "vercel:yolo": "yarn workspace @catacombs/ui vercel:yolo",
    "nillion": "yarn workspace @catacombs/nillion nillion",
    "nillion-devnet": "yarn workspace @catacombs/nillion nillion-devnet",
    "nillion-devnet-stop": "yarn workspace @catacombs/nillion nillion-devnet-stop"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "@types/react-syntax-highlighter": "^15",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}
